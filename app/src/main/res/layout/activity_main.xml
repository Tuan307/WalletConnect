<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/bg_flex_divider"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:showDividers="middle"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/wcSetup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wallet Connect" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/personalSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="personal_sign" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/trans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ETH_SENDTRANSACTION" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sessionRelease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="release" />
</LinearLayout>